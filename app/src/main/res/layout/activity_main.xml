<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sbag.whatsmynextarticle.app.MainActivity">

    <Button
        android:id="@+id/but_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Topics"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:onClick="createTopics"
        />
    <Button
        android:id="@+id/but_topic1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote for Topic 1"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:onClick="vote"
        android:layout_below="@id/but_topics"
        />
    <Button
        android:id="@+id/but_topic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote for Topic 2"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:onClick="vote"
        android:layout_below="@id/but_topic1"
        />
    <Button
        android:id="@+id/but_topic3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote for Topic 3"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:onClick="vote"
        android:layout_below="@id/but_topic2"
        />

</RelativeLayout>
