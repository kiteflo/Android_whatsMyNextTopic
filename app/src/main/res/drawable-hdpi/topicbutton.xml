<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#8c4f39"
                android:centerColor="#8c4f39"
                android:endColor="#8c4f39"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#8c4f39"
                android:centerColor="#8c4f39"
                android:endColor="#8c4f39"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#8c6239"
                android:centerColor="#8c6239"
                android:endColor="#8c6239"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#BDBDBD" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#8c4f39"
                        android:centerColor="#8c4f39"
                        android:endColor="#8c4f39"
                        android:angle="270"
                        />
                    <corners
                        android:radius="2dp" />
                </shape>
            </item>
            <item android:left="60dp">
                <shape>
                    <gradient
                        android:startColor="#8c6239"
                        android:centerColor="#8c6239"
                        android:endColor="#8c6239"
                        android:angle="270"
                        />
                    <corners
                        android:radius="2dp" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>