<resources>

    <style name="activity_main_style_link_bar_item">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="activity_main_style_author_bar_container">
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="activity_main_style_author_bar_text">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="activity_main_style_message_box_text">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- topic button -->
    <style name="activity_main_style_topic_button">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/topicbutton</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <!-- vote button -->
    <style name="activity_main_style_vote_button">
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/votebutton</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>
